<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="nssvast.lednss.houseEntry">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <android.support.design.widget.AppBarLayout
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:theme="@style/AppTheme.AppBarOverlay">

            <android.support.v7.widget.Toolbar
                android:id="@+id/toolbar_member_entry"
                android:layout_width="wrap_content"
                android:layout_height="?attr/actionBarSize"
                android:background="?attr/colorPrimary"
                android:visibility="visible"
                app:popupTheme="@style/AppTheme.PopupOverlay" />
        </android.support.design.widget.AppBarLayout>

        <ScrollView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <Button
                    android:id="@+id/qr"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center_horizontal"
                    android:background="@drawable/qr"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="@dimen/title"
                    android:text="@string/member_title"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/subtitle"
                    android:layout_marginLeft="@dimen/subtitle_left"
                    android:layout_marginStart="@dimen/subtitle_left"
                    android:text="@string/name"/>
                <EditText
                    android:id="@+id/name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/subtitle_left"
                    android:layout_marginStart="@dimen/subtitle_left"
                    android:layout_marginRight="@dimen/subtitle_left"
                    android:layout_marginEnd="@dimen/subtitle_left"
                    android:inputType="textCapCharacters"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/subtitle"
                    android:layout_marginLeft="@dimen/subtitle_left"
                    android:layout_marginStart="@dimen/subtitle_left"
                    android:text="@string/age"/>
                <EditText
                    android:id="@+id/age"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/subtitle_left"
                    android:layout_marginStart="@dimen/subtitle_left"
                    android:layout_marginRight="@dimen/subtitle_left"
                    android:layout_marginEnd="@dimen/subtitle_left"
                    android:inputType="number"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/subtitle"
                    android:layout_marginLeft="@dimen/subtitle_left"
                    android:layout_marginStart="@dimen/subtitle_left"
                    android:text="@string/sex"/>
                <RadioGroup
                    android:id="@+id/sex"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginLeft="@dimen/subtitle_left"
                    android:layout_marginStart="@dimen/subtitle_left"
                    android:layout_marginRight="@dimen/subtitle_left"
                    android:layout_marginEnd="@dimen/subtitle_left">
                    <RadioButton
                        android:id="@+id/male"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/subtitle_left"
                        android:layout_marginEnd="@dimen/subtitle_left"
                        android:text="@string/male"/>
                    <RadioButton
                        android:id="@+id/female"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/subtitle_left"
                        android:layout_marginEnd="@dimen/subtitle_left"
                        android:text="@string/female"/>
                </RadioGroup>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/subtitle"
                    android:layout_marginLeft="@dimen/subtitle_left"
                    android:layout_marginStart="@dimen/subtitle_left"
                    android:text="@string/edu_qualification"/>
                <EditText
                    android:id="@+id/edu_qualifications"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/subtitle_left"
                    android:layout_marginStart="@dimen/subtitle_left"
                    android:layout_marginRight="@dimen/subtitle_left"
                    android:layout_marginEnd="@dimen/subtitle_left"
                    android:inputType="text"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/subtitle"
                    android:layout_marginLeft="@dimen/subtitle_left"
                    android:layout_marginStart="@dimen/subtitle_left"
                    android:text="@string/job"/>
                <EditText
                    android:id="@+id/job"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/subtitle_left"
                    android:layout_marginStart="@dimen/subtitle_left"
                    android:layout_marginRight="@dimen/subtitle_left"
                    android:layout_marginEnd="@dimen/subtitle_left"
                    android:inputType="text"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/subtitle"
                    android:layout_marginLeft="@dimen/subtitle_left"
                    android:layout_marginStart="@dimen/subtitle_left"
                    android:text="@string/uid_no"/>
                <EditText
                    android:id="@+id/uid_no"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/subtitle_left"
                    android:layout_marginStart="@dimen/subtitle_left"
                    android:layout_marginRight="@dimen/subtitle_left"
                    android:layout_marginEnd="@dimen/subtitle_left"
                    android:inputType="number"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/subtitle"
                    android:layout_marginLeft="@dimen/subtitle_left"
                    android:layout_marginStart="@dimen/subtitle_left"
                    android:text="@string/election_no"/>
                <EditText
                    android:id="@+id/election_id_no"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/subtitle_left"
                    android:layout_marginStart="@dimen/subtitle_left"
                    android:layout_marginRight="@dimen/subtitle_left"
                    android:layout_marginEnd="@dimen/subtitle_left"
                    android:inputType="text"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/subtitle"
                    android:layout_marginLeft="@dimen/subtitle_left"
                    android:layout_marginStart="@dimen/subtitle_left"
                    android:text="@string/govt_aids"/>
                <EditText
                    android:id="@+id/govt_aids"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/subtitle_left"
                    android:layout_marginStart="@dimen/subtitle_left"
                    android:layout_marginRight="@dimen/subtitle_left"
                    android:layout_marginEnd="@dimen/subtitle_left"
                    android:inputType="text"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/subtitle"
                    android:layout_marginLeft="@dimen/subtitle_left"
                    android:layout_marginStart="@dimen/subtitle_left"
                    android:text="@string/mob_no"/>
                <EditText
                    android:id="@+id/mob_no"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/subtitle_left"
                    android:layout_marginStart="@dimen/subtitle_left"
                    android:layout_marginRight="@dimen/subtitle_left"
                    android:layout_marginEnd="@dimen/subtitle_left"
                    android:inputType="number"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/subtitle"
                    android:layout_marginLeft="@dimen/subtitle_left"
                    android:layout_marginStart="@dimen/subtitle_left"
                    android:text="@string/any_traits"/>
                <EditText
                    android:id="@+id/any_traits"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/subtitle_left"
                    android:layout_marginStart="@dimen/subtitle_left"
                    android:layout_marginRight="@dimen/subtitle_left"
                    android:layout_marginEnd="@dimen/subtitle_left"
                    android:inputType="text"/>

                <Button
                    android:id="@+id/submit_member"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/title"
                    android:layout_marginBottom="@dimen/title"
                    android:layout_gravity="center_horizontal"
                    android:text="@string/submit"/>

            </LinearLayout>
        </ScrollView>
    </LinearLayout>
</android.support.design.widget.CoordinatorLayout>